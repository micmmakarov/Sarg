<%= current_user.id %>
<% if current_user.id==1 then %>

  <%= form_for([@challenge, @challenge.tasks.build]) do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :time %>
        <%= f.time_select :time %>
      </div>
      <div class="field">
        <%= f.label :note %>
        <%= f.text_area :note %>
      </div>
      <div class="actions">
        <%= f.submit 'Add a Task', "data-role" => "button", "data-icon" => "plus", "data-theme" => "e" %>
      </div>
  <% end %>

<% end %>