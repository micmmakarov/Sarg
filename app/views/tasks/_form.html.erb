<%= form_for([@challenge, @challenge.tasks.build]) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :time %>
      <br/>
      <%= f.time_select :time %>
    </div>
    <div class="field">
      <%= f.label :note %>
      <br/>
      <%= f.text_area :note %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<% end %>