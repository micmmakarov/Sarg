<%= form_for([@task, @task.tasks.build]) do |f| %>
    <div class="field">
      <%= f.label :status %>
      <br/>
      <%= f.check_box :status %>
    </div>
    <div class="field">
      <%= f.label :note %>
      <br/>
      <%= f.text_area :note %>
    </div>
    <div class="field">
      <%= f.label :time %>
      <br/>
      <%= f.time_select :time %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
